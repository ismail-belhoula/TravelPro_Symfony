{% extends 'base.html.twig' %}

{% block title %}Evenement index{% endblock %}

{% block body %}
    <h1>Evenement index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdEvent</th>
                <th>NomEvent</th>
                <th>Lieu</th>
                <th>DateDebutE</th>
                <th>DateFinE</th>
                <th>Type</th>
                <th>Image</th>
                <th>IdReservation</th>
                <th>Latitude</th>
                <th>Longitude</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for evenement in evenements %}
            <tr>
                <td>{{ evenement.idEvent }}</td>
                <td>{{ evenement.nomEvent }}</td>
                <td>{{ evenement.lieu }}</td>
                <td>{{ evenement.dateDebutE ? evenement.dateDebutE|date('Y-m-d') : '' }}</td>
                <td>{{ evenement.dateFinE ? evenement.dateFinE|date('Y-m-d') : '' }}</td>
                <td>{{ evenement.type }}</td>
                <td>{{ evenement.image }}</td>
                <td>{{ evenement.idReservation }}</td>
                <td>{{ evenement.latitude }}</td>
                <td>{{ evenement.longitude }}</td>
                <td>
                    <a href="{{ path('app_evenement_show', {'idEvent': evenement.idEvent}) }}">show</a>
                    <a href="{{ path('app_evenement_edit', {'idEvent': evenement.idEvent}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_evenement_new') }}">Create new</a>
{% endblock %}
