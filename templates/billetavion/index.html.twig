    <!-- Page level custom scripts -->
    <script>
    document.addEventListener('DOMContentLoaded', function() {
        // Vérifier si jQuery et DataTables sont chargés
        if (typeof window.jQuery === 'undefined') {
            console.error('jQuery n\'est pas chargé.');
            document.getElementById('searchError').innerText = 'Erreur : jQuery n\'est pas chargé. La recherche ne fonctionnera pas.';
            document.getElementById('searchError').style.display = 'block';
            return;
        }
        if (typeof jQuery.fn.DataTable === 'undefined') {
            console.error('DataTables n\'est pas chargé.');
            document.getElementById('searchError').innerText = 'Erreur : DataTables n\'est pas chargé. La recherche ne fonctionnera pas.';
            document.getElementById('searchError').style.display = 'block';
            return;
        }

        console.log('jQuery et DataTables sont chargés correctement.');

        // Initialiser DataTable
        const dataTable = jQuery('#dataTable').DataTable({
            "language": {
                "url": "//cdn.datatables.net/plug-ins/1.10.25/i18n/French.json"
            },
            "stateSave": true,
            "columnDefs": [
                { "orderable": false, "targets": [7] } // Désactiver le tri sur la colonne Actions
            ]
        });

        // Stocker les données initiales
        const initialData = [];
        jQuery('#billetavionTableBody tr').each(function() {
            const row = jQuery(this);
            initialData.push({
                compagnie: row.find('td:eq(0)').text(),
                classBillet: row.find('td:eq(1)').text(),
                villeDepart: row.find('td:eq(2)').text(),
                villeArrivee: row.find('td:eq(3)').text(),
                dateDepart: row.find('td:eq(4)').text(),
                dateArrivee: row.find('td:eq(5)').text(),
                prix: row.find('td:eq(6)').text(),
                actions: row.find('td:eq(7)').html()
            });
        });
        console.log('Données initiales stockées :', initialData);

        // Fonction pour mettre à jour le tableau
        function updateTable(billetavions) {
            dataTable.clear().draw();
            
            if (!billetavions || billetavions.length === 0) {
                dataTable.row.add([
                    '', '', '', '', '', '', '',
                    '<td colspan="8" class="text-center">Aucun billet d\'avion trouvé</td>'
                ]).draw();
                return;
            }
            
            billetavions.forEach(billetavion => {
                dataTable.row.add([
                    billetavion.compagnie || '',
                    billetavion.classBillet || '',
                    billetavion.villeDepart || '',
                    billetavion.villeArrivee || '',
                    billetavion.dateDepart || '',
                    billetavion.dateArrivee || '',
                    billetavion.prix || '',
                    `<div class="action-buttons">
                        <a href="${billetavion.showUrl}" class="btn btn-sm btn-primary">Voir</a>
                        <a href="${billetavion.editUrl}" class="btn btn-sm btn-secondary">Modifier</a>
                        <form method="post" action="${billetavion.deleteUrl}" class="d-inline" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce billet d\\'avion ?');">
                            <input type="hidden" name="_token" value="${billetavion._token}">
                            <button type="submit" class="btn btn-sm btn-danger">Supprimer</button>
                        </form>
                    </div>`
                ]).draw(false);
            });
        }

        // Gestion de la recherche avec debounce
        let searchTimer;
        jQuery('#searchInput, #searchInputMobile').on('input', function() {
            console.log('Événement input déclenché avec la valeur :', jQuery(this).val());
            clearTimeout(searchTimer);
            const query = jQuery(this).val().trim();
            document.getElementById('searchError').style.display = 'none';
            
            if (query.length < 2) {
                console.log('Requête trop courte, restauration des données initiales.');
                jQuery('#searchLoading').hide();
                updateTable(initialData);
                return;
            }
            
            jQuery('#searchLoading').show();
            searchTimer = setTimeout(() => {
                console.log('Envoi de la requête AJAX pour la recherche :', query);
                jQuery.ajax({
                    url: '{{ path('app_billetavion_quick_search') }}',
                    method: 'GET',
                    data: { query: query },
                    dataType: 'json',
                    success: function(response) {
                        console.log('Réponse AJAX reçue :', response);
                        if (response.error) {
                            console.error('Erreur serveur:', response.error);
                            document.getElementById('searchError').innerText = 'Erreur serveur : ' + response.error;
                            document.getElementById('searchError').style.display = 'block';
                            updateTable([]);
                            return;
                        }
                        updateTable(response.billetavions);
                    },
                    error: function(xhr, status, error) {
                        console.error('Erreur AJAX:', status, error, xhr.responseText);
                        document.getElementById('searchError').innerText = 'Erreur lors de la recherche : ' + error;
                        document.getElementById('searchError').style.display = 'block';
                        updateTable([]);
                    },
                    complete: function() {
                        jQuery('#searchLoading').hide();
                    }
                });
            }, 300);
        });

        // Gérer la soumission du formulaire
        jQuery('#searchForm, #searchFormMobile').on('submit', function(e) {
            e.preventDefault();
            console.log('Soumission du formulaire de recherche.');
            const query = jQuery(this).find('input').val().trim();
            if (query) {
                jQuery(this).find('input').trigger('input');
            }
        });
    });
    </script>
