{% extends 'basefront.html.twig' %}

{% block title %}Liste des Réponses - TravelPro{% endblock %}

{% block body %}
  <section class="breadcrumbs-custom bg-image context-dark" style="background-image: url({{ asset('frontoffice/images/breadcrumbs-bg.jpg') }});">
    <div class="container">
      <div class="breadcrumbs-custom-inner">
        <h2 class="breadcrumbs-custom-title">Toutes les réponses</h2>
      </div>
    </div>
  </section>

  <section class="section section-lg bg-default">
    <div class="container">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
          <tr>
            <th>ID</th>
            <th>Avis</th>
            <th>Réponse</th>
            <th>Date</th>
            <th>Actions</th>
          </tr>
          </thead>
          <tbody>
          {% for reponse in reponses_avis %}
            <tr>
              <td>{{ reponse.idreponse }}</td>
              <td>Avis #{{ reponse.avi.idavis }}</td>
              <td>{{ reponse.reponse|u.truncate(50, '...') }}</td>
              <td>{{ reponse.datereponse|date('d/m/Y H:i') }}</td>
              <td>
                <a href="{{ path('app_reponses_avi_front_show', {'id_reponse': reponse.idreponse}) }}" class="btn btn-sm btn-info">
                  <i class="fas fa-eye"></i>
                </a>
                <a href="{{ path('app_reponses_avi_front_edit', {'id_reponse': reponse.idreponse}) }}" class="btn btn-sm btn-warning">
                  <i class="fas fa-edit"></i>
                </a>
              </td>
            </tr>
          {% else %}
            <tr>
              <td colspan="5" class="text-center">Aucune réponse trouvée</td>
            </tr>
          {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
  </section>
{% endblock %}
