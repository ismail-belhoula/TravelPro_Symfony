{% extends 'basefront.html.twig' %}

{% block title %}Nouvelle Réponse - TravelPro{% endblock %}

{% block body %}
  <section class="breadcrumbs-custom bg-image context-dark" style="background-image: url({{ asset('frontoffice/images/breadcrumbs-bg.jpg') }});">
    <div class="container">
      <div class="breadcrumbs-custom-inner">
        <h2 class="breadcrumbs-custom-title">Répondre à l'avis #{{ avi.idavis }}</h2>
      </div>
    </div>
  </section>

  <section class="section section-lg bg-default">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-8">
          <div class="card shadow-sm p-4">
            {{ form_start(form) }}
            <div class="form-group mb-4">
              {{ form_label(form.reponse) }}
              {% if form.reponse.vars.errors|length > 0 %}
                <div class="alert alert-danger">
                  {% for error in form.reponse.vars.errors %}
                    <span>{{ error.message }}</span><br>
                  {% endfor %}
                </div>
              {% endif %}
              {{ form_widget(form.reponse, {'attr': {'class': 'form-control' ~ (form.reponse.vars.errors|length > 0 ? ' is-invalid' : ''), 'rows': 5}}) }}
            </div>

            <div class="d-flex justify-content-between">
              <a href="{{ path('app_avi_front_show', {'id_avis': avi.idavis}) }}" class="btn btn-light">
                <i class="fas fa-arrow-left me-2"></i> Annuler
              </a>
              <button type="submit" class="btn btn-primary">
                <i class="fas fa-paper-plane me-2"></i> Envoyer
              </button>
            </div>
            {{ form_end(form) }}
          </div>
        </div>
      </div>
    </div>
  </section>
{% endblock %}
