<form method="post" action="{{ path('app_avi_delete', {'id_avis': avi.idavis}) }}"
      onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet avis ?');"
      class="d-inline">
  <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ avi.idavis) }}">
  <button class="btn btn-sm btn-danger shadow-sm">
    <i class="fas fa-trash fa-sm text-white-50"></i> Supprimer
  </button>
</form>
