{% extends 'base.html.twig' %}

{% block title %}Client index{% endblock %}

{% block body %}
    <h1>Client index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id_client</th>
                <th>Addresse_client</th>
                <th>Num_tel_client</th>
                <th>Image_url</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for client in clients %}
            <tr>
                <td>{{ client.idClient }}</td>
                <td>{{ client.addresseClient }}</td>
                <td>{{ client.numTelClient }}</td>
                <td>{{ client.imageUrl }}</td>
                <td>
                    <a href="{{ path('app_client_show', {'id_client': client.id_client}) }}">show</a>
                    <a href="{{ path('app_client_edit', {'id_client': client.id_client}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_client_new') }}">Create new</a>
{% endblock %}
