                <th>Id_panier</th>
                <th>Id_client</th>
                <th>Montant_total</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for panier in paniers %}
            <tr>
                <td>{{ panier.idPanier }}</td>
                <td>{{ panier.idClient }}</td>
                <td>{{ panier.montantTotal }}</td>
                <td>
