{% extends 'backoffice/base.html.twig' %}

{% block title %}Ajouter un événement{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <style>
        :root {
            --primary-color: #4e73df;
            --secondary-color: #858796;
            --light-gray: #f8f9fc;
        }
        
        .form-container {
            background: white;
            border-radius: 0.5rem;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.1);
            border: 1px solid rgba(0, 0, 0, 0.05);
        }
        
        .form-header {
            border-bottom: 1px solid rgba(0, 0, 0, 0.1);
            padding-bottom: 1rem;
        }
        
        .form-title {
            font-weight: 600;
            color: var(--primary-color);
        }
        
        .form-label {
            font-weight: 600;
            color: #2e3a4d;
            margin-bottom: 0.5rem;
        }
        
        .form-control, .form-select {
            border-radius: 0.35rem;
            padding: 0.75rem 1rem;
            border: 1px solid #d1d3e2;
        }
        
        .form-control:focus, .form-select:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.2rem rgba(78, 115, 223, 0.25);
        }
        
        .btn-submit {
            background-color: var(--primary-color);
            border: none;
            padding: 0.75rem 1.5rem;
            font-weight: 600;
            border-radius: 0.35rem;
            transition: all 0.3s;
        }
        
        .btn-submit:hover {
            background-color: #3a5bc7;
            transform: translateY(-2px);
        }
        
        .file-upload {
            position: relative;
            overflow: hidden;
        }
        
        .file-upload-input {
            position: absolute;
            font-size: 100px;
            opacity: 0;
            right: 0;
            top: 0;
            cursor: pointer;
        }
        
        .file-upload-label {
            display: block;
            padding: 0.75rem 1rem;
            background-color: var(--light-gray);
            border: 1px dashed #d1d3e2;
            border-radius: 0.35rem;
            text-align: center;
            cursor: pointer;
            transition: all 0.3s;
        }
        
        .file-upload-label:hover {
            background-color: #e9ecef;
        }
        
        .preview-container {
            margin-top: 1rem;
            text-align: center;
        }
        
        .image-preview {
            max-width: 100%;
            max-height: 200px;
            border-radius: 0.35rem;
            display: none;
        }
    </style>
{% endblock %}

{% block body %}
 







<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10 col-xl-8">
            <div class="form-container p-4 p-md-5">
                <div class="form-header d-flex justify-content-between align-items-center mb-4">
                    <h1 class="form-title h4 mb-0">
                        <i class="fas fa-calendar-plus me-2"></i>Créer un nouvel événement
                    </h1>
                    <a href="{{ path('app_evenement_index') }}" class="btn btn-outline-secondary btn-sm">
                        <i class="fas fa-arrow-left me-1"></i> Retour à la liste
                    </a>
                </div>

                {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Event Form</h6>
            </div>
                <div class="card-body"> 
                <div class="row">
                    <div class="col-md-6 mb-4">
                        {{ form_label(form.nom_event, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.nom_event, {'attr': {
                            'class': 'form-control',
                            'placeholder': 'Nom de l\'événement'
                        }}) }}
                        <div class="invalid-feedback">
                            {{ form_errors(form.nom_event) }}
                        </div>
                    </div>

                    <div class="col-md-6 mb-4">
                        {{ form_label(form.type, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.type, {'attr': {'class': 'form-select'}}) }}
                        <div class="invalid-feedback">
                            {{ form_errors(form.type) }}
                        </div>
                    </div>
                </div>

                <div class="mb-4">
                    {{ form_label(form.lieu, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.lieu, {'attr': {
                        'class': 'form-control',
                        'placeholder': 'Lieu de l\'événement'
                    }}) }}
                    <div class="invalid-feedback">
                        {{ form_errors(form.lieu) }}
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6 mb-3 mb-md-0">
                        {{ form_label(form.date_debut, null, {'label_attr': {'class': 'form-label'}}) }}
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-calendar-day"></i></span>
                            {{ form_widget(form.date_debut, {'attr': {
                                'class': 'form-control datepicker',
                                'placeholder': 'Date de début'
                            }}) }}
                        </div>
                        <div class="invalid-feedback">
                            {{ form_errors(form.date_debut) }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        {{ form_label(form.date_fin, null, {'label_attr': {'class': 'form-label'}}) }}
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-calendar-day"></i></span>
                            {{ form_widget(form.date_fin, {'attr': {
                                'class': 'form-control datepicker',
                                'placeholder': 'Date de fin'
                            }}) }}
                        </div>
                        <div class="invalid-feedback">
                            {{ form_errors(form.date_fin) }}
                        </div>
                    </div>
                </div>

                 <div class="mb-4">
                     {{ form_row(form.imageFile, {'attr': {'class': 'form-control'}}) }}
                    
                </div>

                <div class="d-grid mt-5">
                    <button type="submit" class="btn btn-submit">
                        <i class="fas fa-save me-2"></i> Enregistrer l'événement
                    </button>
                </div>

                {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr/dist/l10n/fr.js"></script>
    <script>
        // Configuration du datepicker
        flatpickr(".datepicker", {
            dateFormat: "Y-m-d",
            locale: "fr",
            minDate: "today"
        });

        

        // Validation du formulaire
        (function() {
            'use strict';
            const forms = document.querySelectorAll('.needs-validation');
            
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    
                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>
{% endblock %}