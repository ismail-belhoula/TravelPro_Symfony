{% extends 'base.html.twig' %}

{% block title %}Voiture{% endblock %}

{% block body %}
    <h1>Voiture</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id_voiture</th>
                <td>{{ voiture.idVoiture }}</td>
            </tr>
            <tr>
                <th>Marque</th>
                <td>{{ voiture.marque }}</td>
            </tr>
            <tr>
                <th>Modele</th>
                <td>{{ voiture.modele }}</td>
            </tr>
            <tr>
                <th>Annee</th>
                <td>{{ voiture.annee }}</td>
            </tr>
            <tr>
                <th>PrixParJour</th>
                <td>{{ voiture.prixParJour }}</td>
            </tr>
            <tr>
                <th>Disponible</th>
                <td>{{ voiture.disponible ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>DateDeLocation</th>
                <td>{{ voiture.dateDeLocation ? voiture.dateDeLocation|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>DateDeRemise</th>
                <td>{{ voiture.dateDeRemise ? voiture.dateDeRemise|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_voiture_index') }}">back to list</a>

    <a href="{{ path('app_voiture_edit', {'id_voiture': voiture.id_voiture}) }}">edit</a>

    {{ include('voiture/_delete_form.html.twig') }}
