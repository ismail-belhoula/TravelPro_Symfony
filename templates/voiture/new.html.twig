                    {{ form_label(form.marque, null, {
                        'label_attr': {'class': form.marque.vars.errors|length ? 'invalid-label' : ''}
                    }) }}
                    {{ form_widget(form.marque, {
                        'attr': {
                            'class': 'form-control' ~ (form.marque.vars.errors|length ? ' invalid-field' : '')
                        }
                    }) }}
                    {% if form.marque.vars.errors|length %}
